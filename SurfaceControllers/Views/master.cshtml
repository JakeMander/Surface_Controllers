@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
	Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Welcome - UmbracoTV</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/b338f86155.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/main.css" />
</head>
	
<body>

    @Html.Partial("Navigation")
        
    <div class="jumbotron text-center jumbotron-fluid">
        <div class="container">
            <h1 class="display-1">@Model.Value("pageTitle", fallback:Fallback.ToAncestors)</h1>
            <p>@Model.Value("pageSubtitle",fallback: Fallback.ToAncestors)</p>
        </div>
    </div>

    @RenderBody()

    <div class="container-fluid footer flex-d">
        <div class="container">
            <div class="row section">
                <div class="col-md-12 text-center">
                    Jake Mander &copy 2020
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/Scripts/jquery-3.5.1.js" type="text/javascript"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>

</body>

</html>